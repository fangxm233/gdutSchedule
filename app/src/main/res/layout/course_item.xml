<?xml version="1.0" encoding="utf-8"?>
<com.fangxm.schedule.ui.third.CustomButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="3dp"
    android:gravity="center"
    android:orientation="vertical"

    android:padding="2.5dp"
    app:bgColor="@color/teal_200"
    app:bgColorDisable="@color/white"
    app:bgColorPress="@color/teal_200"
    app:cornersRadius="20"
    app:rippleColor="?attr/colorControlHighlight"
    app:shape="rectangle"
    app:strokeColor="#00000000"
    app:strokeWidth1="7">

    <TextView
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:paddingTop="1dp"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="bottom|center_horizontal"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:text="考试"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:textSize="11sp" />
</com.fangxm.schedule.ui.third.CustomButton>